{
  "Settings": {
    "Worker1": {
      "IntervalMin": 1
    },
    "Worker2": {
      "IntervalMin": 3
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "Contains(SourceContext, 'Worker1') or Contains(SourceContext, 'Worker2')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "Path": "C:\\Development\\Sixcel\\Demos\\WorkerService\\WorkerService1\\logs\\CSharpCoreWorkerService.log",
                  "outputTemplate": "{Timestamp:o} [{Level:u3}] ({SourceContext}) {Message}{NewLine}{Exception}",
                  "rollingInterval": "Day",
                  "fileSizeLimitBytes": 2000000,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 30
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "Contains(SourceContext, 'Worker1')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "C:\\Development\\Sixcel\\Demos\\WorkerService\\WorkerService1\\logs\\CSharpCoreWorkerService.Worker1.log",
                  "outputTemplate": "{Timestamp:o} [{Level:u3}] ({SourceContext}) {Message}{NewLine}{Exception}",
                  "fileSizeLimitBytes": 2000000,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 30
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "Contains(SourceContext, 'Worker2')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "C:\\Development\\Sixcel\\Demos\\WorkerService\\WorkerService1\\logs\\CSharpCoreWorkerService.Worker2.log",
                  "outputTemplate": "{Timestamp:o} [{Level:u3}] ({SourceContext}) {Message}{NewLine}{Exception}",
                  "fileSizeLimitBytes": 2000000,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 30
                }
              }
            ]
          }
        }
      }
    ]
  }
}
